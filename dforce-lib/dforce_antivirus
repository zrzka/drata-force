# https://linuxcapable.com/install-clamav-on-fedora-linux/

clear

dforce_run "Current date & time" \
  date

echo

dforce_run "Auto DB updates" \
  systemctl status clamav-freshclam --no-pager --lines 0

echo

dforce_heading "Autorun daily @ 10AM"
dforce_subheading "crontab -l | grep clamav"
crontab -l | grep clamav

echo

dforce_run "Script to run" \
  cat "${HOME}/.local/bin/clamav-scan.sh"

dforce_screenshot "${0:t:r}"
